<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner  --->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% visited.forEach(cadaProducto=>{ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= cadaProducto.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= cadaProducto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<!--  toThousand, es una funcion que por paramaetro se manda el resutado de la cuenta -->
								<h2><%= toThousand(cadaProducto.price - cadaProducto.price * cadaProducto.discount / 100); %> </h2> <!-- precio final -->
								<% if(cadaProducto.discount != 0){ %> <!-- si hay valor que no sea cero que se mmuestra cual es el descuento -->
								<span><%= cadaProducto.discount %>  % OFF</span>
								<% } %> 
								<p><%= cadaProducto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %> 
			
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% inSale.forEach(cadaProducto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= cadaProducto.id %> ">
							<figure class="product-box_image">
								<img src="/images/products/<%= cadaProducto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(cadaProducto.price - cadaProducto.price * cadaProducto.discount /100) %> </h2>
								<% if(cadaProducto.discount != 0 ){ %>
								<span><%= cadaProducto.discount %>  % OFF</span>
								<% } %>
								<p><%= cadaProducto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }); %> 
			
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>